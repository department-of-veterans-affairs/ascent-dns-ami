{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "base_ami_id": null,
    "iam_instance_profile_name": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `base_ami_id`}}",
      "iam_instance_profile": "{{user `iam_instance_profile_name`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-dns-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "dns-ascent"
      },
      "snapshot_tags": {
        "Name": "dns-ascent"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "named.conf-master",
      "destination": "/tmp/named.conf-master"
    },
    {
      "type": "file",
      "source": "internal.vets-api.zone-master",
      "destination": "/tmp/internal.vets-api.zone-master"
    },
    {
      "type": "file",
      "source": "internal.vets-api.zone-slave",
      "destination": "/tmp/internal.vets-api.zone-slave"
    },
    {
      "type": "file",
      "source": "named.conf-slave",
      "destination": "/tmp/named.conf-slave"
    },
    {
      "type": "file",
      "source": "named.service",
      "destination": "/tmp/named.service"
    },
    {
      "type": "file",
      "source": "update_named_conf.sh",
      "destination": "/tmp/update_named_conf.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "basic-packages.sh",
        "setup_bind.sh"
      ]
    }
  ]
}